.add_box { 
  /* padding: 20rpx 15rpx; */
  padding:40rpx 15rpx 20rpx;
  overflow: hidden;
}
.add_box .add_items {
  width: calc((100vw - 150rpx) / 4);
  text-align: center;
  margin: 0 15rpx;
  float: left;
  overflow: hidden;
}
.add_box .add_items .ico_img {
  width: calc(100% - 30rpx);
  height: calc(((100vw - 150rpx) / 4) - 30rpx);
  border-radius: 50%;
  background-color: #f5f5f5;
  padding: 30rpx;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: hidden;
}
.flex_box .add_items {
  width: 120rpx!important;
  margin: 0 auto;
}
.flex_box .add_items .ico_img  {
  width: 120rpx;
  height: 120rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}
.sheet_title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
  border-bottom: #efeef4 solid 2rpx;
  padding:0 20rpx;
  box-sizing:border-box;
}
.add_box .add_items .items_na {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
/*图片灰色*/
.gray { 
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%); 
  filter: grayscale(100%);	
  filter: gray;
}

