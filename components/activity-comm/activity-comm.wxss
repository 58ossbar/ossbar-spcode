/* components/activity-comm/activity-comm.wxss */
.top_tool_hasjiahao {
  padding: 10rpx 0 10rpx 20rpx;
  background-color: #FFF;
}
.top_tool_nojiahao {
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx 20rpx;
  background-color: #FFF;
  box-sizing: border-box;
}
.search_box  {
  border: #efeef4 solid 2rpx;
}

.page_box {
  width:100%;
  background-color:#FFF;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  position: absolute;
}

.tabs .tabs_nemu {
  padding-top: 4px;
  line-height: 1;
}
.tabs .tabs_nemu {
  border-bottom-color: #efeef4;
}
.tabs .tabs_nemu .tabs_nemu_text { 
  font-size: 24rpx;
}


.praisebox .cont_box .top_cont .cont_line {
  height: 40rpx;
  line-height: 40rpx;
}
.praisebox .img_box .head_img {
  width: 80rpx;
  height: 80rpx;
  background-color: #efeef4;
  border-left: #b2b2b2 solid 4rpx;
  border-bottom: #ccc solid 4rpx;
  padding: 15rpx 20rpx 15rpx 10rpx;
  box-sizing: border-box;
  border-radius: 0 40rpx 40rpx 0;
  margin-top: 5rpx;
}
.cont_box .top_cont {
  /* flex:1; */
  width: calc(100% - 120rpx);
}
.cont_line.flex_box .cont_line_flex_box_view:first-child {
  /* flex: 1; */
  width: 75%;
}
.cont_line.flex_box .cont_line_flex_box_view:last-child {
  /* flex: 1; */
  width: 25%;
}
.flex_box .btn_bar {
  /* width: auto !important; */
  width: 104rpx !important;
  box-sizing: border-box;
  text-align: center;
  margin-left: 10rpx;
}
.flex_box .btn_bar .btn_bar_view {
  height: 40rpx;
  line-height: 40rpx;
  position: relative;

  display: flex;
  justify-content: center;
  align-items: center;
}
.flex_box .btn_bar .btn_bar_view .image,
.flex_box .btn_bar .btn_bar_view .icon_wrapper {
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
  transform: rotate(90deg);
  -ms-transform: rotate(90deg); 
}
.flex_box .btn_bar .btn_bar_view .state_wait,
.flex_box .btn_bar .btn_bar_view .state_end {
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  margin-right: 6rpx;
} 
.flex_box .btn_bar .btn_bar_view .state_end{
  border-radius:50%;
  overflow: hidden;
}
.flex_box .btn_bar .btn_bar_view .state_goin {
  width: 0;
  height: 0;
  border-top: 12rpx solid #FFF;
  border-right: 12rpx solid #FFF;
  border-bottom: 12rpx solid #FFF;
  border-left: 12rpx solid #F00;
  display: inline-block;
}

