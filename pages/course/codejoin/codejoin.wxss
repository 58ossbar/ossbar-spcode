/* pages/course/codejoin/codejoin.wxss */
.form_list {
  margin-top: 80rpx;
  border-radius:20rpx;
}
.dashed {
  width:calc( 100% - 20rpx);
  height:2rpx;
  border-bottom:#1296db dashed 2rpx;
  margin: 0 auto;
  top:-2rpx;
  position: absolute;
}
.kc_box,
.kc_no {
  width:100%;
  height: 668rpx;
  border-radius:20rpx;  
  box-sizing:border-box;
  overflow:hidden;
  position: relative;
}
.kc_no view {
  width: 100%;
  line-height: 50rpx;
  text-align: center;
  top:10%;
  position: absolute;
}
.kc_box {
  padding: 20rpx;
  background-color:#FFF;
  border-bottom:#ccc solid 8rpx;
}

.kc_name {
  height:40rpx;
  line-height:40rpx;
  text-align:center;
  padding-bottom:20rpx;

  padding-right: 50rpx;
}
.kc_fm {
  width:100%;
  height:300rpx;
  overflow:hidden;
}
.kc_info {
  display: flex;
  flex-direction: row;
  padding-top:20rpx
}
.kc_info .info1 {
  flex:1;
  height:40rpx;
  line-height:40rpx;
}
.kc_info .info2,
.kc_info .info3 {
  width:auto;
  height:40rpx;
  line-height:40rpx; 
  margin-left:20rpx;
}
.kc_info .info2 {
  display: flex;
  flex-direction: row;
}
.kc_info .info2 image,
.kc_info .info2 .icon_wrapper {
  width:32rpx;
  height:32rpx;
  margin:4rpx 8rpx 4rpx 0;
}
.teach_box {
  display: flex;
  flex-direction: row;
  margin:20rpx 0;
  }
.teach_box .teach_left,
.teach_box .teach_right {
  flex:1;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  background-color:#f5f5f5;  
}
.teach_box .teach_left {
  margin-right:10rpx;
}
.teach_box .teach_right {
  margin-left:10rpx;
}
.teach_box .image_box {
  width:120rpx; 
  height:160rpx;

  background-color: #cecccc;
}
.teach_box .teach {
  flex:1;
  line-height:60rpx;
  text-align:center;
  padding:20rpx 10rpx;
}

