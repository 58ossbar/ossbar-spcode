/* pages/other/random/random.wxss */
.container {
  padding-bottom: 120rpx; 
  position: relative;
}
.inputbox {
  width: 100vw;
  height: 80rpx;
  padding: 10rpx 20rpx;
  background-color: #FFF;
  box-sizing: border-box;
  margin-top: -20rpx;
  margin-left: -20rpx;
  margin-right: -20rpx;
}
.inputbox input {
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
}
.answer_box {
  width: 100vw;
  height: 80vw;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.answer_box .sm {
  margin-top: 80rpx;
  display: block;
}
.answer_box image ,
.answer_box .icon_wrapper{
  width: 36vw;
  height: 36vw;
  left: 50%;
  margin-left: -18vw;
  top:50%;
  margin-top: -12vw;
  position: absolute;
}
.cancel_btn {
  width: auto;
  line-height: 40rpx;
  top:100rpx;
  right: 20rpx;
  position: absolute;
}



.bot_box {
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  bottom: 0;
  position: absolute;
}

.bot_box .bot_btn {
  width: calc((100% - 60rpx) / 2);
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 34rpx;
  background-color: #efeef4;
  border-radius: 8rpx;
  margin: 20rpx 10rpx;
  position: relative;
}
.bot_btn image,
.bot_btn .icon_wrapper {
  width: 40rpx;
  height: 40rpx;
  left: 20rpx;
  top: 50%;
  margin-top: -20rpx;
  position: absolute;
}
