.scroll_view_class{
  height: calc(100vh - 120rpx - 170rpx);
}
.random_top{
  padding: 50rpx 20rpx 30rpx;
  text-align: center;
  box-sizing: border-box;
}
.random_center{
  width: 100%;
  height: 100%;
  padding-top: 0rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: flex-start;
}
.random_center_inner,
.random_center_icon_wrapper{
  width: calc((100vw - 120rpx) / 4);
  height:  calc(((100vw - 120rpx) / 4) + 50rpx);
  margin: 20rpx 10rpx 0;
  position: relative;
}
.random_center_icon_wrapper{
  height:  calc(((100vw - 120rpx) / 4));
  background-color: #ccc;
  border-radius: 50%; 
}
.random_center_inner .random_center_img {
  width: calc(100% - 20rpx);
  height: calc(((100vw - 120rpx) / 4) - 20rpx);
  border-radius: 50%; 
  background-color: #ccc;
  overflow: hidden;
  margin: 10rpx;

  position: relative;
}
.random_center_inner .random_center_img .random_center_img_wenhao{
  position: absolute;
  top: 37%;
  left: 42%;
  font-weight: bold;
  font-size: 30rpx;
}
.random_center_inner .random_center_name {
  display: block;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  overflow: hidden;
}
.random_center_icon_animation{
  animation: yaoyiyao_anim 0.5s linear infinite;
}
@keyframes  yaoyiyao_anim{
  0% { transform: rotate(0deg); }
  /* 25% { transform: rotate(60deg); } */
  50% { transform: rotate(45deg) ; }
  /* 75% { transform:  rotate(-20deg); } */
  100% { transform: rotate(0deg); }

  /* 0% { transform: translate(0px) rotate(0deg); }
  25% { transform: translate(25px) rotate(60deg); }
  50% { transform: translate(0) ; }
  75% { transform: translate(-25px) rotate(-60deg); }
  100% { transform: translate(0px) rotate(0deg); } */
}

.rush_answer_stu_delbtn{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}