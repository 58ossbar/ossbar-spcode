/* pages/other/stuptqd/stuptqd.wxss */
.container{
  padding: 25rpx;
}
.ptqd_contain{
  height: 96vh;
  padding-top: 100rpx;
  box-sizing: border-box;
}
.location_wrapper{
  text-align: center;
  padding-bottom:150rpx;
  box-sizing: border-box;
}
.location_wrapper_jtwz{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.ring_wraper{
  text-align: center;
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.ring1{
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ring2{
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.ring_time{
  font-size: 60rpx;
}

.qdlabel{
  font-size: 40rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
}
.remark_wrapper{
  width: 75%;
  border-top: #efeef4 solid 2rpx;
  border-bottom: #efeef4 solid 2rpx;
  margin-top: 100rpx;
  padding-top: 40rpx;
}
.remark_inner{
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  position: relative;
}
.remark_loca{
  width: 70%;
  text-align: right;
}
.remark_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10%;
  position: absolute;
  right: 0;
  top: -20rpx;
}


.location_wrapper,
.ring_wraper{
  transform: translateY(0rpx);
  transition: all 0.4s;
  -webkit-transform: translateY(0rpx);
}
.hide_animation .location_wrapper,
.hide_animation .ring_wraper{
  transform: translateY(-300rpx);
  transition: all 0.4s;
  -webkit-transform: translateY(-300rpx);
}
.hide_animation .ring1{
  width: 200rpx;
  height: 200rpx;
  transition: all 0.4s;
}



