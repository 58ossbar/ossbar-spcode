/* pages/other/stuxqwj/stuxqwj.wxss */
.column_title {
  color: #353535;
}
.column_title .fun_btn_extend image,
.column_title .fun_btn_extend .icon_wrapper{
  margin-left: 10rpx;
  margin-right: 0;
}
.wt {
  line-height:1.5; 
  padding:20rpx 20rpx 0;
}
.wt text {
  margin-right: 8rpx;
}
/* 添加的begin */
.value_extend {
  text-align: left;
  color: #353535;
}
.form_list .form_line .value_box {
  border-bottom: #efeef4 solid 2rpx!important;
}
.form_list .form_line .key_name {
  width: auto;
}
/* 添加的end */
.form_list .form_line .value_box textarea {
  width: calc(100% - 40rpx);
  height: 50vh;
  margin: 10rpx auto;
}

/*  重写 radio 样式  */
.radio {/* 未选中的 背景样式 */
  position: static;
}
.radio .wx-radio-input{
   border: 2rpx solid #d9d9d9;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
.radio .wx-radio-input.wx-radio-input-checked{
  border: 2rpx solid #d9d9d9 !important;
}


/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
.checkbox .wx-checkbox-input{
  top: 0;
  right: -8rpx;
  margin-left: -18rpx;
  position: absolute;
}

.check_value_box{
  margin: 0 20rpx;
  line-height: 60rpx;
}

action-sheet {
  width: 100%;
  overflow: hidden;
  background-color: #FFF;
}
.add_box { 
  /* padding: 20rpx 15rpx; */
  padding:40rpx 15rpx 20rpx;
  overflow: hidden;
}
.add_box .add_items {
  width: calc((100vw - 150rpx) / 4);
  text-align: center;
  margin: 0 15rpx;
  float: left;
  overflow: hidden;
}
.add_box .add_items .ico_img {
  width: calc(100% - 30rpx);
  height: calc(((100vw - 150rpx) / 4) - 30rpx);
  border-radius: 50%;
  background-color: #f5f5f5;
  padding: 30rpx;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: hidden;
}
.flex_box .add_items {
  width: 120rpx!important;
  margin: 0 auto;
}
.flex_box .add_items .ico_img  {
  width: 120rpx;
  height: 120rpx;
}
.sheet_title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
  border-bottom: #efeef4 solid 2rpx;
}
.add_box .add_items .items_na {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.fj_box .icon_wrapper, .fj_box_s .icon_wrapper{
  width: 100%;
  height: 100%;
  margin: 0;
}

.video_wrapper{
  width: 100% !important;
  height: 100% !important;
  position: relative;
  background-color: #000  !important;
  padding: 0 !important;
}
.video_wrapper .video_icon {
  position: absolute;
  top: calc(50% - 20rpx);
  left: calc(50% - 20rpx);
  /* background-color: #000  !important; */
}  
.videoFullScreen{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  z-index: 999;
}

.scroll_view_class{
  height: calc(100vh - 100rpx);
}
.files_wrap{
  width: 100% !important;
  height: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
}