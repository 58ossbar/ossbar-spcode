
/* pages/tabbar/courselist/courselist.wxss */
.search_line {
  width:100%;
  background-color:#0033cc;
  padding:10rpx 20rpx;
  box-sizing: border-box;
}
.search_line .search_box {
  width:calc(100vw - 40rpx);
}
.popup_box {
  width:80vw;
  height:80vw;
  background:#FFF;
  border:#efeef4 solid 4rpx;
  z-index: 99;
  top:calc((100vh - 80vw - 100rpx) / 2);
  left:10vw; 
  position:absolute;
}
.popup_box .side_box {
  width:100%; 
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
  position: relative;
  display: flex;
  align-items: center;

}
.side_box .side_btn {
  width: 60rpx;
  height: 60rpx;
  top:10rpx;
  position: absolute;
}
.side_box .side_btn image {
  display: block;
}
.popup_box .mid_box {
  width:100%; 
  height:calc(100% - 200rpx);
}
.popup_box .mid_box view {
  width:calc(100% - 200rpx);
  height:100%;
  margin:0 auto;
  background:#ccc;
}

.top_tag{
  width: auto;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 40rpx;
  font-size: 16rpx;
  text-align: center;
  color: #FFF;
  background-color: #11b928;
  position: absolute;
  z-index: 2;
  top: 10rpx;
  right: -40rpx;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);

}

.class_box .class_info{
  overflow: hidden;
}

action-sheet-item{
  padding: 24rpx 0;
}
.scroll_view_class{
  height: calc(100vh - 160rpx);
}

.to_top_btn{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 -4rpx 4rpx 4rpx #0033cc6b , 0 4rpx 4rpx 4rpx #0033cc6b;
  z-index: 30;
  background-color: #efeef4;
  box-sizing: border-box;
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.toTopBtn{
  display: inline-block;
  /* padding: 50rpx; */
  width: 80rpx;
  height: 80rpx;
  z-index: 30;
  position: absolute;
  text-align: center;
  right: 20rpx;
  bottom: 40rpx;
  border-radius: 50% 0 50% 50%;
  opacity: 0.6;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.toTopBtnLabel{
  color: #fff;
  font-style: italic;
  font-size: 20rpx;
  transform: rotate(-6deg);
  -ms-transform: rotate(-6deg); 
}

.list_class{
  width: 100%;
}
.class_box{
  flex: auto;
  width: calc(100% - 340rpx);
}